<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".watch_activity"
    android:orientation="vertical">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_watch"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#b2dfee"
        ></android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="标题"
            android:textColor="#000000"/>
        <EditText
            android:id="@+id/title_text_watch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"

            />

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="内容"
        android:textSize="15dp"
        android:textColor="#000000"
        />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:id="@+id/image_recycleview_watch"
        ></android.support.v7.widget.RecyclerView>

    <net.dankito.richtexteditor.android.RichTextEditor
        android:id="@+id/editor_watch"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"

        />

    <net.dankito.richtexteditor.android.toolbar.AllCommandsEditorToolbar
        android:id="@+id/editorToolbar_watch"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="@color/colorPrimary"
        />
</LinearLayout>